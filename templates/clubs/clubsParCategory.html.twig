{% extends 'base.html.twig' %}
{% block title %}Liste des Articles par catégorie {% endblock %}
    {% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('css/styletab.css') }}">
    
{% endblock %}
{% block body %}
<div class="cont justify-content-center">
    <div class="row">

{{form_start(form)}}

<div class="form-row align-items-end">
<div class="col">
{{form_row(form.category)}}
</div>
<div class="col">
<div class="form-groupe">
<button type="submit" class="btn btn-success">Rechercher</button>
</div>
</div>
</div>
</div>
</div>
{{form_end(form)}}
{% if clubs %}
<div class="container">
  <div class="table-responsive">
<table id="clubs" class="table table-striped">
<thead>
<tr>
<th>Nom</th>
<th>email</th>
<th>category</th>
</tr>
</thead>
<tbody>
{% for club in clubs %}
<tr>
<td>{{club.nom}}</td>
<td>{{club.email}}</td>
<td>{{club.category.titre}}</td>
<td>
<a href="/club/{{club.id}}" class="btn btn-info btn-round btn-just-icon btn-sm">Détails</a>

     <a href="/club/edit/{{club.id}}" class="btn btn-success btn-round btn-just-icon btn-sm">Modifier</a>

      <a href="/club/delete/{{club.id}}" class="btn btn-danger btn-round btn-just-icon btn-sm" onClick="return confirm('Etes-vous sur de supprimer ce club ?');">Supprimer</a>
</td>
</tr>
{% endfor %}
</tbody>
</table>
{% else %}
<p>Aucun club</p>
</div>
</div>
{% endif %}
{% endblock %}

