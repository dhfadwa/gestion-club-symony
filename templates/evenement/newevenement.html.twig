{% extends 'base.html.twig' %}

{% block title %}Ajouter un club{% endblock %}
        {% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    
{% endblock %}
{% block body %}
<body>
<div class="container">
    <div class="row">
    <div class="form-holder">
        <div class="form-content">
            <div class="form-items">
                <h3>Ajouter un nouveaux Evenement </h3>
                <p>Remplir les champs suivants.</p>
            <div class="col-md-12">
            {{ form_start(form) }}
                    {{ form_label(form.nom, 'Nom du club', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l evenement', 'required': 'required'}}) }}
            </div>
            
            <div class="col-md-12">

                    {{ form_label(form.contexte, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.contexte, {'attr': {'class': 'form-control', 'placeholder': 'contexte'}}) }}
            </div>
             <div class="col-md-12">

                    {{ form_label(form.description, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'description'}}) }}
            </div>
            <div class="col-md-12">
                    {{ form_label(form.lieu, 'niveau', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'lieu '}}) }}
            </div>
            <div class="col-md-12">
                    {{ form_label(form.date, 'telephone', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'date'}}) }}
            </div>
            
            <div class="col-md-12">
                    {{ form_label(form.club, 'club', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.club, {'attr': {'class': 'form-select col-md-12', 'placeholder': 'club'}}) }}
            </div>
            
        <div class="col-md-12">

        {{ form_row(form.imageFile) }}
        
    </div>
            <div class="mt-3 form-button">
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
</body>
{% endblock %}
