{% extends 'base.html.twig' %}

{% block title %}Ajouter un club{% endblock %}
        {% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    
{% endblock %}
{% block body %}
<body>
<div class="container">
    <div class="row">
    <div class="form-holder">
        <div class="form-content">
            <div class="form-items">
                <h3>Modifier l'évenement </h3>
                <p>modifier les champs suivants.</p>
            <div class="col-md-12">
            {{ form_start(form) }}
                    {{ form_label(form.nom, 'Nom ', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du membre', 'required': 'required'}}) }}
            </div>
            <div class="col-md-12">

                    {{ form_label(form.contexte, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.contexte, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            </div>
            <div class="col-md-12">
                    {{ form_label(form.lieu, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
            </div>
            <div class="col-md-12">
                    {{ form_label(form.date, 'type', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Type'}}) }}
            </div>
            <div class="col-md-12">
                    {{ form_label(form.club, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.club, {'attr': {'class': 'form-select col-md-12', 'placeholder': 'Catégorie'}}) }}
            </div>
            <div class="col-md-12">
                    {{ form_label(form.description, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-select col-md-12', 'placeholder': 'club'}}) }}
            </div>
             <div class="col-md-12">
            
                    {{ form_label(form.imageFile, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.imageFile, {'attr': {'class': 'form-select col-md-12', 'placeholder': 'club'}}) }}
            </div>
            <div class="mt-3 form-button">
                <button type="submit" class="btn btn-primary">Modifier</button>
            </div>

               
            {{ form_end(form) }}
        </div>
    </div>
</div>
</body>
{% endblock %}
