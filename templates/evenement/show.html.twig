{% extends 'base.html.twig' %}

{% block title %}Liste des clubs {% endblock %}
    {% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('css/styleshowcard.css') }}">
    
{% endblock %}
{% block body %}


<section class="dark">
	<div class="container py-4">
		<h1 class="h1 text-center" id="pageHeaderTitle">{{evenement.nom}}</h1>

		<article class="postcard dark blue">
			<a class="postcard__img_link" href="#">
             <img src="{{ asset('images/' ~ evenement.postulaire) }}" alt="Photo" width="350">			</a>
			<div class="postcard__text">
				<h1 class="postcard__title blue"><a href="#">{{evenement.nom}}</a></h1>
				<div class="postcard__subtitle small">
					<time datetime="2020-05-25 12:00:00">
						{{evenement.date}}
					</time>
				</div>
				<div class="postcard__bar"></div>
				<div class="postcard__preview-txt"> {{evenement.description}}</div>
				<ul class="postcard__tagbox">
					<li class="tag__item"><i class="fas fa-tag mr-2">Lieu:{{evenement.lieu}}
					<li class="tag__item">Contexte:{{evenement.contexte}}</li>
					<li class="tag__item play blue">
						<a href="#">Club:{{evenement.club.nom}}</a>
					</li>
				</ul>
			</div>
		</article>
		
		
	</div>
</section>





{% endblock %}