{% extends 'base.html.twig' %}

{% block title %}Liste des évènements{% endblock %}

{% block body %}

 {% if evenements %}
<div class="container">
  <div class="table-responsive">
    <table id="membres" class="table">
    <thead>
    <tr>
      <th>Postulaire</th>
      <th>Nom</th>
      <th>Contexte</th>
      <th>Lieu</th>
      <th>Club</th>
      <th>Date</th>


      <th>Actions</th>
    </tr>
    <thead>
    <tbody>
     {% for evenement in evenements %}
     <tr>
     <td><img src="{{ asset('images/' ~ evenement.postulaire) }}" alt="Photo" width="150"></td>
     <td>{{evenement.nom}}</td>
    <td>{{evenement.contexte}}</td>
    <td>{{evenement.lieu}}</td>
     <td>{{evenement.club.nom}}</td>
          <td>{{evenement.date}}</td>
    

     <td>
     <a href="/evenement/show/{{evenement.id}}" class="btn btn-info btn-round btn-just-icon btn-sm">Détails</a>
     <a href="/evenement/editEvenement/{{evenement.id}}" class="btn btn-success btn-round btn-just-icon btn-sm">Modifier</a>

      <a href="/evenement/delete/{{evenement.id}}" class="btn btn-danger btn-round btn-just-icon btn-sm" onClick="return confirm('Etes-vous sur de supprimer ce club ?');">Supprimer</a>
     </td>
     </tr>
     {% endfor %}
     </tbody>
     </table>
  {% else %}
    <p> Aucun club</p>
</div>
</div>
  {% endif %}
{% endblock %}
