{% extends 'base.html.twig' %}

{% block title %}Ajouter une categorie des membres{% endblock %}
        {% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    
{% endblock %}
{% block body %}
<body>
<div class="container">
    <div class="row">
    <div class="form-holder">
        <div class="form-content">
            <div class="form-items">
                <h3>Ajouter une nouvelle catégorie </h3>
                <p>Remplir les champs suivants.</p>
            <div class="col-md-12">
            {{ form_start(form) }}
                    {{ form_label(form.titre, 'Nom de catégorie', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'nom du catégorie ', 'required': 'required'}}) }}
            </div>
            
            <div class="col-md-12">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
            </div>
            

            <div class="mt-3 form-button">
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>

               
            {{ form_end(form) }}
        </div>
    </div>
</div>
</body>
{% endblock %}
